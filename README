This code allow you to get memory usage of mpi process and the daemon.

#Build

    $ mpicc check_memory.c memory.c -o check_memory

#Usage
    $ mpirun -np 4 ./check_memory -a -b -c

    -a -b -c allow to print different info from /proc/pid/status
    enable -a (necessary)
    long VmSize;
    long VmRss;

    enable -b (improtant)
    long VmPin;
    long RssShmem;

    enable -c (optional)
    long VmData;
    long VmStk;
    long VmExe;
    long VmLib;
    long VmPTE;
    long VmPMD;
    long VmSwap;
    char Cpus_allowed[256];
    char Cpus_allowed_list[256];
    char Mems_allowed[256];
    char Mems_allowed_list[256];
    long voluntary_ctxt_switches;
    long nonvoluntary_ctxt_switches;

